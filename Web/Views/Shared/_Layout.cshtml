<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FNS.Main</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="header">
        @{
            var separatorIndex = Environment.UserName.IndexOf('-');
            var unitCode = separatorIndex > 0 ? 
                Environment.UserName.Substring(0, separatorIndex) : Environment.UserName;
            var agencyName = char.ToLower(unitCode.FirstOrDefault()) == 'n' ? "ФКУ" : "ФНС";
        }
        <a class="navbar-left" href="/">@agencyName @unitCode</a>
        <a class="navbar-right" href="/">Привет, @ViewBag.UserFullName!</a>

    </header>

    <div class="container">
            @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - ФКУ "Налог-Сервис" -
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

